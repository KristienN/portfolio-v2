<div class="min-h-screen max-w-screen flex flex-col m-4 p-12 items-center justify-center font-lovelace">
  <p class="text-5xl text-center mt-6 p-6">More Than Just Frontend & Backend...</p>
  <p class="text-2xl text-center mb-12 p-6 w-1/2">I also have valuable experience deploying applications using a whole
    host of
    technologies & infrastructure.</p>
  <div class="flex flex-row">
    {{#each this.job as |job|}}
      <div class="flex flex-col items-center">
        <div class="flex">
          <div class="w-72 h-auto shadow-lg rounded-lg border {{if (eq job.status 'success') 'border-green-500'
                                                                   'border-blue-500'}} p-5">
            <div class="flex justify-between items-center mb-2">
              <div class="flex items-center">
                {{#if (eq job.status 'success')}}
                  <img src="/assets/img/{{job.status}}.png" alt="" class="w-8 h-8 rounded-full border mr-1">
                {{/if}}
                {{#if (eq job.status 'in-progress')}}
                  <img src="/assets/img/{{job.status}}.gif" alt="" class="w-8 h-8 rounded-full border mr-5">
                {{/if}}
                <p class="text-lg font-bold">{{job.name}}</p>
              </div>
              <div
                class="h-8 w-15 flex rounded-full p-3 border font-bold justify-center items-center text-center text-blue-600 hover:bg-blue-500 hover:text-white text-md">
                {{if (eq  job.duration 'dynamic') this.dynamicDuration job.duration}}
              </div>
            </div>
          </div>
          {{#if job.link}}
            <div class="w-36 h-1 bg-green-500 ml-8 mr-8 mt-8"></div>
          {{/if}}
        </div>
      </div>
    {{/each}}
  </div>
  <div class="flex flex-row justify-center h-96 w-1/2 border shadow-xl mt-10 rounded-lg">
    <div class="flex flex-col items-center w-96 h-full">
      {{#each this.buttons as |b|}}
        <div class="group/button flex items-center justify-between h-1/5 border w-full p-5 hover:bg-green-200">
          <div class="flex items-center">
            <div class="h-2 w-2 bg-green-500 rounded-full mr-5 group-hover/button:bg-white"></div>
            <p class="text-lg">{{b}}</p>
          </div>
          <p class="italic flex rounded-full font-bold text-center">
            5s
          </p>

        </div>
      {{/each}}
    </div>
    <div class="w-full h-full bg-black text-white p-5">
      <code>
        some dummy code that can act as a placeholder till i find out how i can track the state of my clicked buttons
      </code>
    </div>
  </div>
</div>
