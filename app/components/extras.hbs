<div class="min-h-screen max-w-screen flex flex-col m-4 p-12 items-center justify-center font-lovelace">
  <p class="text-5xl text-center mt-6 p-6">More Than Just Frontend & Backend...</p>
  <p class="text-2xl text-center mb-12 p-6 w-1/2">I also have valuable experience deploying applications using a whole
    host of
    technologies & infrastructure.</p>
  <div class="flex flex-row">
    {{#each this.jobs as |job|}}
      <div class="flex flex-col items-center justify-center">
        <div class="flex items-center justify-center">
          {{#if job.link}}
            <div class="w-36 h-1 rounded-xl mx-8">
              <div class="w-full h-full {{if (eq job.status 'in-progress')
                                             "bg-blue-500"
                                             "bg-green-500"}}"></div>
            </div>

          {{/if}}
          <div
            class="transition-all ease-in-out hover:scale-110 duration-300 group cursor-pointer w-72 h-auto  rounded-lg border {{if
              (eq job.name this.selectedJob.name)'scale-105 border-yellow-300 shadow-sm' 'shadow-lg'}} {{if
              (eq job.status 'success')
              'hover:border-green-500'
              'hover:border-blue-500'}} p-5" {{on
            "click"
            (fn this.setSelectedJob job)}}>
            <div class="flex justify-between items-center mb-2">
              <div class="flex items-center">
                {{#if (eq job.status 'success')}}
                  <img src="/assets/img/{{job.status}}.png" alt="" class="w-6 h-6 rounded-full border mr-1">
                {{/if}}
                {{#if (eq job.status 'in-progress')}}
                  <img src="/assets/img/{{job.status}}.gif" alt="" class="w-6 h-6 rounded-full border mr-5">
                {{/if}}
                <p class="text-lg font-bold">{{job.name}}</p>
              </div>
              <div
                class="transition-all ease-in-out duration-300 h-8 w-15 flex rounded-full p-3 border font-bold justify-center items-center text-center text-blue-600 group-hover:bg-blue-500 group-hover:text-white text-md">
                {{if (eq  job.duration 'dynamic') this.dynamicDuration job.duration}}
              </div>
            </div>
          </div>

        </div>
      </div>
    {{/each}}
  </div>

  <div class="flex justify-end w-1/2 mt-12">
    {{#each this.selectedJob.tags as |st|}}
      <div class="h-16 w-16 rounded-full border shadow-md bg-white mx-2">
        <img src={{st.imgSrc}} alt={{st.name}} class="w-full h-full rounded-full ">
      </div>
    {{/each}}
  </div>

  <div class=" flex flex-row justify-center h-96 w-1/2 border shadow-xl rounded-l-lg mt-2">
    <div class="flex flex-col items-center w-96 h-full">
      {{#each this.selectedJob.steps as |s|}}
        <div class="flex items-center justify-between h-1/5 border-b w-full p-5">
          <div class="flex items-center">
            <div
              class="h-2 w-2 {{if (eq s.status 'in-progress') "bg-blue-400" "bg-green-500"}} rounded-full mr-5"></div>
            <p class="text-md">{{s.name}}</p>
          </div>
          <p class="italic flex rounded-full font-bold text-center text-xs">
            {{if (eq s.duration 'dynamic') this.dynamicDuration s.duration}}
          </p>
        </div>
      {{/each}}
    </div>
    <div class="w-full h-full bg-black text-white px-5 pt-5 rounded-r-lg">
      <code>
        {{#each this.selectedJob.description as |sj|}}
          <p class={{sj.color}}>{{sj.line}}</p>
        {{/each}}
      </code>
    </div>
  </div>
</div>
