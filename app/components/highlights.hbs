<div class="flex flex-row justify-center h-auto w-full mt-5">
  {{#each this.highlights as |highlight|  }}
    <div class="flex flex-col items-center w-[36rem]">
      <div>
        <div class="bg-white shadow-2xl rounded w-96 p-6">
          <div class="flex justify-between items-center">
            <p class="font-bold text-2xl">{{highlight.company}}</p>
            <img src={{highlight.logoSrc}} alt="yahoo" class="h-10 w-10">
          </div>
          <p class="font-italic text-md mb-10">{{highlight.title}}</p>
          <p class="text-md text-pretty font-bold">{{highlight.description}}</p>
        </div>
      </div>

      <div class="w-full h-auto relative my-10">
        <div class="h-px w-full bg-black z-0"></div>
        <div class="absolute border-2 border-sky-500 rounded-full h-5 w-5 z-5 mx-auto inset-x-5 -top-2"></div>
      </div>

      <div class="flex flex-col w-64 bg-blue-100 p-4 items-center self-center">
        <p class="font-bold text-xs">{{highlight.dates}}</p>
        <p class="font-italic text-xs">{{highlight.locations}}</p>
      </div>
    </div>
  {{/each}}
</div>